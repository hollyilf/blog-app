<%- include("partials/header"); -%>

  <h1>
      <!-- Format the date  -->
    <%
    const options = {
    day: "numeric",
    month: "long",
    year: "numeric"
    };
    const formattedDate = date.toLocaleDateString("en-UK", options);
    %>
    <%= formattedDate %>
  </h1>
  
  <form action="/compose" method="post">
    <div class="form-group">
      <textarea class="form-control" placeholder="Compose new journal post ..." name="postBody" rows="5" cols="30"></textarea>
    </div>
    <button class="btn btn-secondary" type="submit" name="button">Publish</button>
  </form>

<%- include("partials/footer"); -%>
